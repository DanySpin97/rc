#!/bin/execlineb -P

foreground { fdmove -c 1 2 s6-echo "Starting fifodir-cleanup" }

fdmove -c 2 1

if
{
    forbacktickx -ep -0 i { s6-ls -0 /service }
    importas -u i i
    foreground
    {
        if { s6-test -d /service/${i}/log }
        s6-cleanfifodir /service/${i}/log/event
    }
    s6-cleanfifodir /service/${i}/event
}

s6-setuidgid nobody
s6-sleep 86400
